---
let {title, className }= Astro.props;

title = title ?? Astro.url.pathname.replace(/\/$/, '').replace(/\/-/g, ' ').replace(/\//g, ' / ').replace("/", "")
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/clover.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>ASCII - {title}</title>
	</head>
	<body class={className}>
		<slot />
	</body>
</html>
